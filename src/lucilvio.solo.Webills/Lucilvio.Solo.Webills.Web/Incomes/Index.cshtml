@model Lucilvio.Solo.Webills.Clients.Web.Incomes.IncomesResponse
@{
    Layout = "_Layout";
    ViewData["title"] = "Incomes";
    ViewData["icon"] = "icon-add";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h6 class="panel-title">
                    <span class="text-semibold"><i class="icon-add text-success"></i> &nbsp; Incomes</span>
                    <button type="submit" data-toggle="modal" data-target="#modal-new-income" class="btn btn-primary btn-xs pull-right"> New Income </button>
                </h6>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Value</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var income in Model.Incomes)
                        {
                            <tr>
                                <td class="col-lg-8">@income.Name</td>
                                <td class="col-lg-1">@income.Date</td>
                                <td class="col-lg-1">@income.Value </td>
                                <td class="col-lg-1 text-right"><a href="#" class="edit-income" data-id="@income.Id"><i class="icon-pencil"></i></a></td>
                                <td class="col-lg-1 text-right"><a href="#" class="remove-income" data-id="@income.Id"><i class="icon-cross"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @*<ul class="fab-menu fab-menu-fixed fab-menu-bottom-right" data-fab-toggle="click">
                <li>
                    <a href="#" class="fab-menu-btn btn bg-blue btn-float btn-rounded btn-icon legitRipple">
                        <i class="fab-icon-open icon-plus3"></i>
                        <i class="fab-icon-close icon-cross2"></i>
                    </a>
                    <a href="#" class="fab-menu-btn btn btn-warning btn-float btn-rounded btn-icon legitRipple">
                        <i class="fab-icon-open icon-plus3"></i>
                        <i class="fab-icon-close icon-cross2"></i>
                    </a>
                </li>
                <li>

                </li>
            </ul>*@
    </div>
</div>

@Html.PartialAsync("_AddNewIncome.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("_EditIncome.cshtml").GetAwaiter().GetResult()

@section Scripts {
    <script>
        $(".edit-income").click(function () {
            var id = $(this).data("id");

            $.getJSON("/Incomes/" + id)
                .done(function (data) {
                    var income = data.income;

                    $("#income-title-name").val(income.name);

                    $.each(income, function (name, value) {
                        $("#form-edit-income input[name='" + name + "']").val(value);
                    });

                    $("#modal-edit-income").modal("show");
                }).fail(function (error) {
                    alert(error.responseText);
                });
        });

        $(".remove-income").click(function () {
            var id = $(this).data("id");
            
            $.post("/Incomes/Remove", { id: id })
                .done(function (data) {
                    location.reload();
                })
                .fail(function (error) {
                    alert(error.responseText);
                });
        });
    </script>
}