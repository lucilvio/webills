@Html.PartialAsync("../AddNewIncome/AddNewIncome.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("../AddNewExpense/AddNewExpense.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("../EditIncome/EditIncome.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("../EditExpense/EditExpense.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("../RemoveExpense/RemoveExpense.cshtml").GetAwaiter().GetResult()

@section Scripts {
    <script>
        $(".edit-income").click(function () {
            var id = $(this).data("id");

            $.getJSON("/Home/EditIncome", { id: id })
                .done(function (data) {
                    var income = data.income;

                    $("#income-title-name").val(income.name);

                    $.each(income, function (name, value) {
                        $("#form-edit-income input[name='" + name + "']").val(value);
                    });

                    $("#modal-edit-income").modal("show");
                }).fail(function (error) {
                    alert(error.responseText);
                });
        });

        $(".edit-expense").click(function () {
            var id = $(this).data("id");

            $.getJSON("/Home/EditExpense", { id: id })
                .done(function (data) {
                    var expense = data.expense;

                    $.each(expense, function (name, value) {
                        $("#form-edit-expense").find("[name = '" + name + "']").val(value);
                    });

                    $("#modal-edit-expense").modal("show");
                }).fail(function (error) {
                    alert(error.responseText);
                });
        });

        $(".remove-income").click(function () {
            var id = $(this).data("id");

            $.post("/Home/RemoveIncome", { incomeId: id })
                .done(function (data) {
                    alert(data.message);
                    location.reload();
                })
                .fail(function (error) {
                    alert(error.responseText);
                });
        });

        $(".remove-expense").click(function () {
            var id = $(this).data("id");
            var userId = $("#userId").val();

            $.post("/Home/RemoveExpense", { userId: userId, expenseId: id })
                .done(function (data) {
                    alert(data.message);
                    location.reload();
                })
                .fail(function (error) {
                    alert(error.responseText);
                });
        });
    </script>
}