@model Lucilvio.Solo.Webills.Web.Home.UserTransactionsInformationViewModel
@{
    Layout = "_Layout";
    ViewData["title"] = "Dashboard";
    ViewData["icon"] = "icon-home";
}

<div class="row">
    <div class="col-lg-12">

        <div class="row">
            <div class="col-lg-4">
                <div class="panel panel-flat border-left-blue">
                    <div class="panel-body">
                        <h2 class="panel-title"><span class="text-semibold">Balance</span></h2>
                        <div class="col-12">
                            <p class="pull-right"><i class="icon-cash3 icon-2x d-inline-block text-blue"></i></p>
                            <h3 class="font-weight-semibold mb-0 text-blue"> @Model.Balance </h3>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="panel panel-flat border-left-info">
                    <div class="panel-body">
                        <h2 class="panel-title"><span class="text-semibold">Total Earns</span></h2>
                        <div class="col-12">
                            <p class="pull-right"><i class="icon-cash3 icon-2x d-inline-block text-success"></i></p>
                            <h3 class="font-weight-semibold mb-0 text-success"> @Model.TotalEarns </h3>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="panel panel-flat border-left-warning">
                    <div class="panel-body">
                        <h2 class="panel-title"><span class="text-semibold">Total Spent</span></h2>
                        <div class="col-12">
                            <p class="pull-right"><i class="icon-cash3 icon-2x d-inline-block text-warning"></i></p>
                            <h3 class="font-weight-semibold mb-0 text-warning"> @Model.TotalSpent </h3>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h6 class="panel-title">
                    <span class="text-semibold"><i class="icon-add text-success"></i> &nbsp; Incomes</span>
                    <button type="submit" data-toggle="modal" data-target="#modal-new-income" class="btn btn-primary btn-xs pull-right"> New Income </button>
                </h6>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Value</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var income in Model.Incomes)
                        {
                            <tr>
                                <td>@income.Name</td>
                                <td>@income.Date</td>
                                <td>@income.Value </td>
                                <td><a href="#" class="edit-income" data-id="@income.Number"><i class="icon-pencil"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="panel panel-flat">
            <div class="panel-heading">
                <h6 class="panel-title">
                    <span class="text-semibold"><i class="icon-subtract text-warning"></i> &nbsp; Expenses </span>
                    <button type="submit" data-toggle="modal" data-target="#modal-new-expense" class="btn btn-primary btn-xs pull-right"> New Expense </button>
                </h6>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Value</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model.Expenses)
                        {
                            <tr>
                                <td>@expense.Name</td>
                                <td>@expense.Date</td>
                                <td>@expense.Value </td>
                                <td><a href="#" class="edit-expense" data-id="@expense.Number"><i class="icon-pencil"></i></a></td>
                                <td><a href="#" class="remove-expense" data-id="@expense.Number"><i class="icon-cross"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <ul class="fab-menu fab-menu-fixed fab-menu-bottom-right" data-fab-toggle="click">
            <li>
                <a class="fab-menu-btn btn bg-teal-400 btn-float btn-rounded btn-icon legitRipple">
                    <i class="fab-icon-open icon-paragraph-justify3"></i>
                    <i class="fab-icon-close icon-cross2"></i>
                </a>

                <ul class="fab-menu-inner">
                    <li>
                        <div data-fab-label="Compose email">
                            <a href="#" class="btn btn-default btn-rounded btn-icon btn-float legitRipple">
                                <i class="icon-pencil"></i>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div data-fab-label="Conversations">
                            <a href="#" class="btn btn-default btn-rounded btn-icon btn-float legitRipple">
                                <i class="icon-bubbles7"></i>
                            </a>
                            <span class="badge bg-primary-400">5</span>
                        </div>
                    </li>
                    <li>
                        <div data-fab-label="Chat with Jack">
                            <a href="#" class="btn bg-pink-400 btn-rounded btn-icon btn-float legitRipple">
                                <img src="../../../../global_assets/images/placeholders/placeholder.jpg" class="img-responsive" alt="">
                            </a>
                            <span class="status-mark border-pink-400"></span>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>

@Html.PartialAsync("../AddNewIncome/AddNewIncome.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("../AddNewExpense/AddNewExpense.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("../EditIncome/EditIncome.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("../EditExpense/EditExpense.cshtml").GetAwaiter().GetResult()
@Html.PartialAsync("../RemoveExpense/RemoveExpense.cshtml").GetAwaiter().GetResult()

@section Scripts {
    <script>
        $(".edit-income").click(function () {
            var incomeNumber = $(this).data("id");

            $.getJSON("/Home/EditIncome", { incomeNumber: incomeNumber })
                .done(function (data) {
                    var income = data.income;

                    $("#income-title-name").val(income.name);

                    $.each(income, function (name, value) {
                        $("#form-edit-income input[name='" + name + "']").val(value);
                    });

                    $("#modal-edit-income").modal("show");
                }).fail(function (error) {
                    alert(error.responseText);
                });
        });

        $(".edit-expense").click(function () {
            var expenseNumber = $(this).data("id");

            $.getJSON("/Home/EditExpense", { expenseNumber: expenseNumber })
                .done(function (data) {
                    var expense = data.expense;

                    $.each(expense, function (name, value) {
                        $("#form-edit-expense input[name='" + name + "']").val(value);
                    });

                    $("#modal-edit-expense").modal("show");
                }).fail(function (error) {
                    alert(error.responseText);
                });
        });

        $(".remove-expense").click(function () {
            var expenseNumber = $(this).data("id");

            $.post("/Home/RemoveExpense", { expenseNumber: expenseNumber })
                .done(function (data) {
                    alert(data.message);
                    location.reload();
                })
                .fail(function (error) {
                    alert(error.responseText);
                });
        });
    </script>
}