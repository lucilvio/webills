<div id="modal-new-expense" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa-minus"></i>New Expense</h5>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <form action="/Home/AddNewExpense" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <label>Name</label>
                                <input type="text" name="name" placeholder="Income name" class="form-control">
                            </div>

                            <div class="col-sm-12">
                                <label>Date</label>
                                <input type="date" name="date" placeholder="Income date" class="form-control">
                            </div>

                            <div class="col-sm-12">
                                <label>Value</label>
                                <input type="text" name="value" placeholder="Income value" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn bg-primary">+ Add</button>
                </div>
            </form>
        </div>
    </div>
</div>