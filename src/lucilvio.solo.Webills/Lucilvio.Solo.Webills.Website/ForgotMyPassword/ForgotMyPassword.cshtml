@page
@model Lucilvio.Solo.Webills.Website.ForgotMyPassword.ForgotMyPasswordModel
@{
    Layout = "_OfflineLayout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="auth-form">
            <div class="row">
                <div class="col">
                    <div class="logo-box"><a href="/Login" class="logo-text">W E B i l l s</a></div>
                    <form method="POST">
                        <br />
                        <br />
                        <div class="form-group text-left">
                            <h5> Enter with your e-mail, maybe I can help you with your password </h5>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="Email" aria-describedby="emailHelp" placeholder="Enter your email" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-submit"> Please, help me! </button>
                        <div class="auth-options text-center">
                            <a href="/Login">I Remembered my password, let me login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
