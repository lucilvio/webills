<div class="modal fade show" id="new-transaction" tabindex="-1" role="dialog" aria-labelledby="newTransaction" aria-modal="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Transaction</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group custom-control-inline">
                    <div id="income-radio" class="custom-control custom-radio form-check-inline">
                        <input v-model="newTransaction.type" @@click="loadIncomeCategories" class="custom-control-input" type="radio" id="income" name="type" value="income">
                        <label class="custom-control-label" for="income">
                            Income
                        </label>
                    </div>
                    <div id="expense-radio" class="custom-control custom-radio form-check-inline">
                        <input v-model="newTransaction.type" @@click="loadExpenseCategories" class="custom-control-input" type="radio" id="expense" name="type" value="expense" checked>
                        <label class="custom-control-label" for="expense">
                            Expense
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input v-model="newTransaction.name" type="text" class="form-control" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input v-model="newTransaction.date" type="date" class="form-control" name="date" placeholder="Date" required>
                </div>

                <div class="form-group">
                    <select v-model="newTransaction.category" class="form-control custom-select" placeholder="Category" required>
                        <option selected value=""> Select a category </option>
                        <option v-for="category in transactionCategories" ::value="category.value">{{ category }}</option>
                    </select>
                </div>

                <div class="form-group">
                    <input v-model="newTransaction.value" type="text" class="form-control money" placeholder="Value" required>
                </div>

                <div class="custom-control custom-checkbox form-group">
                    <input v-model="newTransaction.recurrent" type="checkbox" class="custom-control-input" id="recurrentCheck" >
                    <label class="custom-control-label" for="recurrentCheck">Recurrent</label>
                </div>

                <div v-if="newTransaction.recurrent" class="form-row">
                    <div class="col-lg-7">
                        <div class="form-group">
                            <select class="form-control custom-select" name="frequency" required>
                                <option value=""> Select frequency </option>
                                <option value="1">Daily</option>
                                <option value="30">Monthly</option>
                                <option value="90">Trimonthly</option>
                                <option value="365">Yearly</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <input class="form-control" name="until" placeholder="Until" onfocus="(this.type='date')" onblur="(this.type='text')" required>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button @@click="addTransaction" type="button" class="btn btn-primary"> Add </button>
                </div>
            </div>
        </div>
    </div>
</div>