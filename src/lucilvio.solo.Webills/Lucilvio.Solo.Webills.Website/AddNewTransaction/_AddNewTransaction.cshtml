@page
@model Lucilvio.Solo.Webills.Website.AddNewTransaction._AddNewTransactionModel

<div class="modal fade show" id="new-transaction" tabindex="-1" role="dialog" aria-labelledby="newTransaction" aria-modal="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Transaction</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group custom-control-inline">
                        <div class="custom-control custom-radio form-check-inline">
                            <input class="custom-control-input" type="radio" id="income" name="type" value="income" checked>
                            <label class="custom-control-label" for="income">
                                Income
                            </label>
                        </div>
                        <div class="custom-control custom-radio form-check-inline">
                            <input class="custom-control-input" type="radio" id="expense" name="type" value="expense">
                            <label class="custom-control-label" for="expense">
                                Expense
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Name" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <input type="date" class="form-control" name="Date" placeholder="Date" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control money" name="Value" placeholder="Value" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>