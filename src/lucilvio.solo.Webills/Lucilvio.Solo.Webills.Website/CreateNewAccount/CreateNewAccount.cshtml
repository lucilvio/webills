@page
@model Lucilvio.Solo.Webills.Website.CreateNewAccount.CreateNewAccountModel
@{
    Layout = "_OfflineLayout";
}

<div class="auth-form">
    <div class="row">
        <div class="col">
            <div class="logo-box"><a href="/Login" class="logo-text">W E B i l l s</a></div>
            <form method="POST">
                <br />
                <br />
                <div class="form-group text-left">
                    <h5>Enter with your information to create a new account</h5>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="Name" aria-describedby="emailHelp" placeholder="What is your name? *" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="Email" aria-describedby="emailHelp" placeholder="What is your e-mail *" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="Password" aria-describedby="emailHelp" placeholder="Enter with your password *" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="PasswordConfirmation" placeholder="Please, confirm the password *" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-submit">Create my Account</button>
                <div class="auth-options text-center">
                    <a href="/Login">I remembered my account, let me login</a>
                </div>
            </form>
        </div>
    </div>
</div>
